{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "dev:all": "concurrently --kill-others --names \"PHP,FRONT,QUEUE\" \"php artisan serve\" \"npm --prefix ../frontend run dev -- --host --port 5173\" \"php artisan queue:work redis --queue=default --tries=1 --verbose\"",
        "queue:work": "php artisan queue:work redis --queue=default --tries=1 --verbose"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.7"
    }
}
